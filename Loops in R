#############################################################################
# For loop
for (i in 1:10) {
  print(i)
}
#############################################################################
# While Loop
i<-0
while(i<4) {
  i = i+1
  print(i)
}
#############################################################################
# Repeat Loop
repeat {
  print("a")
  break()          #Break is used to end the loop
}
#############################################################################
